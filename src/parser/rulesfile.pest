file = _{ SOI ~ statement* ~ EOI }
statement = { conditional? ~ directive ~ string ~ from }
conditional = { "if" ~ string }
directive = { "create" | "append" }
path = { string }
from = {fromFile | fromLiteral | fromFilter}
fromFile = { "from" ~ string }
fromLiteral = { "literal" ~ string }
fromFilter = { "filter" ~ string ~ from }
string = ${ "'" ~ inner ~ "'" }
inner = @{ char* }
char = { !("'") ~ ANY | "''" }
WHITESPACE = _{ NEWLINE | " " | "\t" }